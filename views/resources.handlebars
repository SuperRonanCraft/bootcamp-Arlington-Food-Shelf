<div class='container mt-5'>
  <h2 class='mb-4'>Schedule</h2>
  <div id='schedule-container'></div>
</div>

<!-- Handlebars template for rendering the schedule -->
<div id='schedule-template' type='text/x-handlebars-template'>
  <table class='table table-striped table-hover'>
    <thead class='table-dark'>
      <tr>
        <th>Day</th>
        <th>Times</th>
        <th>Additional Sources</th>
      </tr>
    </thead>
    <tbody>
      {{#each schedule}}
        <tr>
          <td>{{day}}</td>
          <td>
            {{#each times}}
              <div>{{this}}</div>
            {{/each}}
          </td>
          <td class='wrap-text'>
            {{#each additionalSources}}
              <p><strong>{{this.name}}:</strong> {{this.description}}</p>
            {{/each}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div class="container">
  <h2>Calendar</h2>
  <table id="calendar">
    <thead>
      <tr>
        <th>Sun</th>
        <th>Mon</th>
        <th>Tue</th>
        <th>Wed</th>
        <th>Thu</th>
        <th>Fri</th>
        <th>Sat</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</div>


<script src='/js/resources.js'></script>
