<dir class='card'>
  <h1 class='card-title'>Login or Create Account</h1>
  <form id='login' class='card-body mx-0'>
    <div class='form-group'>
      <label class='fs-3'>Username</label>
      <input
        type='username'
        class='form-control'
        id='username'
        placeholder='johndoe123'
      />
    </div>

    <div class='form-group'>
      <label class='fs-3'>Password</label>
      <input type='password' class='form-control' id='password' />
    </div>

    <button type='submit' class='btn mt-2'>Login</button>

  </form>
</dir>
<script src='/js/login.js'></script>