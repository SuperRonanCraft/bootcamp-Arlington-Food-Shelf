<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH'
      crossorigin='anonymous'
    />
    <title>Alrington Food Shelf</title>
    {{! <link rel='stylesheet' href='/css/jass.css' /> }}
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>
    <div class='flex-column justify-space-around'>
      <header>

        <nav class='navbar navbar-expand-lg'>
          <div class='container-fluid'>
            <a class='navbar-brand' href='/'>Arlington Food Shelf</a>
            <button
              class='navbar-toggler'
              type='button'
              data-bs-toggle='collapse'
              data-bs-target='#navbarNavAltMarkup'
              aria-controls='navbarNavAltMarkup'
              aria-expanded='false'
              aria-label='Toggle navigation'
            >
              <span class='navbar-toggler-icon'></span>
            </button>
            <div class='collapse navbar-collapse' id='navbarNavAltMarkup'>
              <div class='navbar-nav'>
                <a class='nav-link' href='/'>Home</a>
                <a class='nav-link' href='/stock'>Stock</a>
                <a class='nav-link' href='/orders'>My Orders</a>
                <a class='nav-link' href='/about'>About</a>
                <a class='nav-link' href='/resources'>Resources</a>
                {{#if loggedIn}}
                  <button class='nav-link' id='logout'>Logout</button>
                {{else}}
                  <a class='nav-link' href='/login'>Login/Signup</a>
                {{/if}}
              </div>
            </div>
          </div>
        </nav>
      </header>
      <main class='mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
    </div>
    <!-- Render script for logged in users only -->
    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
    <script src='/js/navbar.js'></script>
    <footer>
      <h4 class='navbar-brand' href='/'>Arlington Food Shelf</h4>
    </footer>
  </body>

  <script
    src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js'
    integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz'
    crossorigin='anonymous'
  ></script>

</html>