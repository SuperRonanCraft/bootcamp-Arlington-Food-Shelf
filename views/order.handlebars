<div class='text-center'>
  <a href='/orders' class='btn btn-primary'>View Orders</a>
</div>
<div class='container my-2 w-100'>
  <form class='row'>
    {{#each stock as |item|}}
      <div class='col-sm-6 col-md-4 col-lg-3'>
        <div class='card bg-info col-md-12'>
          <div class='card-body px-0'>
            <h3 class='card-title text-center'>{{name}}</h3>
            <div class='card-body'>
              <p class='text-center'>{{description}}</p>
              <p class='text-center fs-6'>Available: {{stock}}</p>
              <div class='text-center'>
                <label class='btn btn-secondary'>
                  <input type='checkbox' name='selected' />
                  Select
                </label>
              </div>
              <div class='d-flex'>
                <label class='w-50'>Quantity</label>
                <input
                  type='number'
                  name='quantity'
                  min='1'
                  value='1'
                  class='w-50'
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </form>
</div>
<script src='/js/order.js'></script>